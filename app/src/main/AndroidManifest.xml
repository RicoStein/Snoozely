<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Berechtigungen -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" tools:targetApi="s"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" tools:ignore="UnusedAttribute" />

    <!-- WLAN -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Snoozely"
        tools:targetApi="31">

        <!-- Motor / Zeit-Engine -->
        <service
            android:name=".service.TimerEngineService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Notification + Heads-up -->
        <service
            android:name=".service.TimerNotificationService"
            android:exported="false" />

        <!-- Audio-Fade / Stop -->
        <service
            android:name=".service.AudioFadeService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Screen sperren -->
        <service
            android:name=".service.ScreenLockService"
            android:exported="false" />

        <!-- Bluetooth -->
        <service
            android:name=".service.BluetoothService"
            android:enabled="true"
            android:exported="false" />

        <!-- WLAN -->
        <service
            android:name=".service.WifiControlService"
            android:exported="false" />

        <!-- Haptik -->
        <service
            android:name=".service.HapticsService"
            android:exported="false" />

        <!-- Schnelleinstellungs-Tile -->
        <service
            android:name=".tile.SleepTimerTileService"
            android:exported="true"
            android:icon="@drawable/ic_qs_sleeptimer"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Widget-Provider -->
        <receiver
            android:name=".widget.TimerQuickStartWidgetProvider"
            android:exported="true"
            android:label="@string/widget_quick_start_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/timer_quick_start_widget_info" />
        </receiver>

        <!-- Konfigurations-Activity (für Long-Press “Einstellungen”) -->
        <activity
            android:name=".widget.TimerWidgetConfigActivity"
            android:exported="true"
            android:theme="@style/Theme.Snoozely">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Klick-Receiver vom Widget -->
        <receiver
            android:name=".widget.TimerStartReceiver"
            android:exported="false" />

        <!-- Optional: Premium Toggle -->
        <receiver
            android:name=".widget.PremiumToggleReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.tigonic.snoozely.DEBUG_PREMIUM_TOGGLE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Snoozely">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Device Admin (für Screen-Off) -->
        <receiver
            android:name=".util.ScreenOffAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="false">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
