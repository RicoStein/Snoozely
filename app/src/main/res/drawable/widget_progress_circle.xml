<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Hintergrund-Layer: Ein solider schwarzer Kreis.
    Dieser Teil ist immer sichtbar, solange die ProgressBar sichtbar ist.
    -->
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <!--
    Fortschritts-Layer: Ein blauer Ring, der über den schwarzen Kreis gezeichnet wird.
    Seine Sichtbarkeit wird durch den Fortschrittswert der ProgressBar gesteuert.
    -->
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="-90">
            <shape
                android:shape="ring"
                android:useLevel="true"
                android:thicknessRatio="20.0"> <!-- Steuert die Dicke des Rings. Größere Zahl = dünner. -->
                <solid android:color="#4285F4" />
            </shape>
        </rotate>
    </item>

</layer-list>
